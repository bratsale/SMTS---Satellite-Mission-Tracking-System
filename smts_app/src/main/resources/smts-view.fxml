<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="project.smts_app.gui.SmtsController"
            prefHeight="500.0" prefWidth="600.0">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label text="Kreiranje novog lansiranja i satelita" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                </columnConstraints>
                <Label text="Naziv satelita:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="nazivSatelitaField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="Zemlja proizvodnje:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="zemljaProizvodnjeField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="Masa (kg):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="masaKgField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label text="ID misije:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="misijaIdField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label text="ID tipa:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="tipIdField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <Label text="Vrijeme lansiranja (YYYY-MM-DDTHH:MM:SS):" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <TextField fx:id="vrijemeLansiranjaField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <Label text="ID rakete:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextField fx:id="raketaIdField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <Label text="ID mjesta:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <TextField fx:id="mjestoIdField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
            </GridPane>
            <Button onAction="#onKreirajLansiranjeClick" text="Kreiraj lansiranje" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <Label fx:id="porukaLabel" text="" style="-fx-font-weight: bold;"/>
        </VBox>
    </children>
</AnchorPane>