<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER" spacing="10.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <Label text="Detalji misija i partnera" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TableView fx:id="misijePartneriTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="Misija" prefWidth="120">
                    <cellValueFactory><PropertyValueFactory property="nazivMisije" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Status" prefWidth="100">
                    <cellValueFactory><PropertyValueFactory property="statusMisije" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Zemlja" prefWidth="100">
                    <cellValueFactory><PropertyValueFactory property="zemlja" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Operater" prefWidth="150">
                    <cellValueFactory><PropertyValueFactory property="operater" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Uloga" prefWidth="150">
                    <cellValueFactory><PropertyValueFactory property="ulogaOperatera" /></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <Button onAction="#prikaziVizualizacijuMisija" text="PrikaÅ¾i vizualizaciju"/>

        <Button onAction="#showMainMenu" text="Nazad"/>
    </children>
</VBox>