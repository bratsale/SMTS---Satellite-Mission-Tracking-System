<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TextField?>
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER" spacing="10.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <Label text="Detalji lansiranja" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Pretraga:"/>
            <TextField fx:id="filterField" promptText="Pretražite po satelitu, raketi, misiji..."/>
        </HBox>

        <TableView fx:id="detaljiLansiranjaTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="Satelit" prefWidth="120">
                    <cellValueFactory><PropertyValueFactory property="satelit" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Vrijeme Lansiranja" prefWidth="150">
                    <cellValueFactory><PropertyValueFactory property="vrijemeLansiranja" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Raketa" prefWidth="120">
                    <cellValueFactory><PropertyValueFactory property="raketaNosac" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Misija" prefWidth="150">
                    <cellValueFactory><PropertyValueFactory property="misija" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Mjesto Lansiranja" prefWidth="150">
                    <cellValueFactory><PropertyValueFactory property="mjestoLansiranja" /></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <Button onAction="#showMainMenu" text="Nazad"/>
        <Button onAction="#obrisiLansiranje" text="Obriši"/>

    </children>
</VBox>