<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER" spacing="10.0">
    <children>
        <Label text="Kreiranje novog lansiranja i satelita" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <Label text="Naziv satelita:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nazivSatelitaField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Zemlja proizvodnje:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="zemljaProizvodnjeField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Masa (kg):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="masaKgField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="ID misije:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="misijaIdField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Label text="ID tipa:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="tipIdField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            <Label text="Vrijeme lansiranja (YYYY-MM-DDTHH:mm:ss):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="vrijemeLansiranjaField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            <Label text="ID rakete:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="raketaIdField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            <Label text="ID mjesta:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <TextField fx:id="mjestoIdField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
            <Label fx:id="porukaLabel" text="" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        </GridPane>
        <HBox alignment="CENTER" spacing="10.0">
            <Button onAction="#onKreirajLansiranjeClick" text="Kreiraj lansiranje"/>
            <Button onAction="#showMainMenu" text="Nazad"/>
        </HBox>
    </children>
</VBox>