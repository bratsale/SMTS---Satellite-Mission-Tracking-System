<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER" spacing="10.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <Label text="Misije po statusu" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <!-- Novi HBox za kontrole za pretragu i filtriranje -->
        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Pretraga po nazivu:"/>
            <TextField fx:id="misijeFilterField" promptText="Unesite naziv misije..." HBox.hgrow="ALWAYS"/>
            <Label text="Status:"/>
            <ComboBox fx:id="misijeStatusComboBox" promptText="Odaberi status"/>
        </HBox>

        <TableView fx:id="misijeStatusTable" VBox.vgrow="SOMETIMES">
            <columns>
                <TableColumn text="Naziv misije" prefWidth="250">
                    <cellValueFactory><PropertyValueFactory property="nazivMisije" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Status" prefWidth="150">
                    <cellValueFactory><PropertyValueFactory property="status" /></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <PieChart fx:id="misijeStatusChart" title="Procentualni status misija" />

        <Button onAction="#showMainMenu" text="Nazad"/>
    </children>
</VBox>
