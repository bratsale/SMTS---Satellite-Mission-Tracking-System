<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER" spacing="10.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <Label text="Sateliti i orbite" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TableView fx:id="satelitiOrbiteTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="Naziv Satelita" prefWidth="150">
                    <cellValueFactory><PropertyValueFactory property="nazivSatelita" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Tip Satelita" prefWidth="120">
                    <cellValueFactory><PropertyValueFactory property="tipSatelita" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Naziv Misije" prefWidth="150">
                    <cellValueFactory><PropertyValueFactory property="nazivMisije" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Visina (km)" prefWidth="100">
                    <cellValueFactory><PropertyValueFactory property="visinaOrbiteKm" /></cellValueFactory>
                </TableColumn>
                <TableColumn text="Inklinacija (Â°)" prefWidth="100">
                    <cellValueFactory><PropertyValueFactory property="inklinacijaOrbite" /></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <Button onAction="#showMainMenu" text="Nazad"/>
    </children>
</VBox>